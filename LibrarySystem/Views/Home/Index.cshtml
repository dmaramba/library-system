@model List<Book>;

@{
    ViewData["Title"] = "Books";
}

<div class="container mt-4">
    <!-- Header -->
    <div class="text-center mb-5">
        <h1 class="display-5 fw-semibold text-primary">
            <i class="bi bi-book-half me-2"></i> Library Books
        </h1>
        <p class="lead text-muted">
            Manage your library books and availability below.
        </p>
        <hr class="w-25 mx-auto text-primary opacity-75" />
    </div>

    <!-- Book List Card -->
    <div class="card shadow-sm border-0">
        <div class="card-header bg-gradient text-white"
             style="background: linear-gradient(90deg, #1e3c72, #2a5298);">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-journal-text me-2"></i> Book List</h5>
                <button class="btn btn-light btn-sm" data-bs-toggle="modal" data-bs-target="#addBookModal">
                    <i class="bi bi-plus-lg me-1"></i> Add New Book
                </button>
            </div>
        </div>

        <div class="card-body p-0">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped align-middle mb-0">
                        <thead class="table-primary">
                            <tr>
                                <th class="text-start">Title</th>
                                <th class="text-start">Author</th>
                                <th class="text-center">Year</th>
                                <th class="text-center">Total Copies</th>
                                <th class="text-center">Available</th>
                                <th class="text-center" style="width:220px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-start">@item.Title</td>
                                    <td class="text-start">@item.Author</td>
                                    <td class="text-center">@item.Year</td>
                                    <td class="text-center">@item.Total</td>
                                    <td class="text-center">
                                        @if (item.IsAvailable)
                                        {
                                            <span class="badge bg-success"><i class="bi bi-check-circle"></i> Yes</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger"><i class="bi bi-x-circle"></i> No</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a href="@Url.Action("Edit", "Books", new { id = item.Id })"
                                               class="btn btn-outline-warning">
                                                <i class="bi bi-pencil-square me-1"></i> Edit
                                            </a>

                                            <form asp-action="Delete" asp-controller="Books" asp-route-id="@item.Id"
                                                  method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-outline-danger"
                                                        onclick="return confirm('Remove this book?');">
                                                    <i class="bi bi-trash me-1"></i> Remove
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            }
            else
            {
                <div class="p-4 text-center text-muted">
                    <i class="bi bi-exclamation-circle display-6 d-block mb-2"></i>
                    No books available yet.
                </div>
            }
        </div>
    </div>
</div>